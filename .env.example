
# Server Configuration
PORT=3000
NODE_ENV=development

# Database Connection
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Client URL
CLIENT_URL="http://localhost:3000"

# JWT Secrets (IMPORTANT: Use strong secrets in production)
# Generate with: openssl rand -base64 32
ACCESS_JWT_SECRET="your_super_secret_access_token_key_min_32_chars_long_abc123"
REFRESH_JWT_SECRET="your_super_secret_refresh_token_key_min_32_chars_long_xyz789"
JWT_EXPIRATION="15m"

# Email Configuration (Optional - for future use)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"


